/* Common Styles */

html,
body {
  height: 100%;
  background-image: url('../images/stars_background.jpg');
  background-color: rgba(0, 0, 0, 1);
  font-family: 'Source Code Pro', sans-serif;
  color: rgba(255, 255, 255, 1);
  cursor: default;
}

h1 {
  text-align: center;
  font-weight: bold;
}

.pointer {
  cursor: pointer;
}

.pull-left {
  cursor: pointer;
}

textarea, input {
  font-family: Arial;
  font-size: 1.2em ;
  color: rgba(45, 45, 45, 1);
  font-weight: bold
}

label {
  margin-top: 20px;
}

.text-link {
  font-weight: 700;
  color: rgba(255, 128, 0, 1);
  cursor: pointer;
}

/* Main Container */

.main-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.inner-container-row {
  width: 80%;
  height: 100%;
  padding: 20px;
  margin-bottom: 40px;
  border-radius: 5px;
  display: flex;
  flex-flow: row wrap;
  background-color: rgba(45, 45, 45, 0.8);
}

.inner-container-column {
  width: 80%;
  height: 100%;
  padding: 20px;
  margin-bottom: 40px;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  background-color: rgba(45, 45, 45, 0.8);
}

/* Nav */

nav img {
	margin: 20px 0px 0px 10px;
}

#display_name {
	float: right;
	font-size: 18px;
	margin-top: 20px;
	margin-right: 50px;
}

.history-button {
  color: rgba(255, 255, 255, 1);
  border-color: rgb(0, 0, 0);
/*  margin-left: 10px;
*/  margin-top: 15px;
  font-weight: bolder;
  font-size: 16px;
  margin-left: 5px;
  background-color: rgba(45, 45, 45, 1);
}

.history-button:hover {
  color: rgba(128, 128, 128, 1);
}

.history-back {
  margin-left: 20px;
  background-color: rgba(45, 45, 45, 1);
}

.history-back:hover {
  background-color: rgba(255, 65, 0, 1);
}

/*.no-history-back:hover {
  background-color: rgba(128, 128, 128, 1);
}*/


.history-next:hover {
  background-color: rgba(255, 65, 0, 1);

}

.no-history-next {
  background-color: rgba(45, 45, 45, 1);

}

.history-arrows {
  margin:7px;
}


/* Also used in other forms */

nav .dropdown-menu {
  float: left;
  width: 250px;
}

.dropdown-menu {
  border-radius: 5px;
  padding: 10px;
	background-color: rgba(0, 0, 0, 1);
  z-index: 1000;
  cursor: pointer;
}

.dropdown-menu > li {
  font-size: 1.2em;
  font-weight: bolder;
}

.dropdown-menu > li:hover {
/*  background-color: rgba(45, 45, 45, 1);
*/
  background-color: rgba(255, 65, 0, 1);
}

.dropdown-menu li {
  z-index: 10000;
}

.dropdown {
	float: right;
	margin-top: 15px;
	margin-right: 20px;
	padding-bottom: 18px;


}

.dropdown .btn {
	background-color: rgba(45, 45, 45, 1);
	border-color: rgb(45, 45, 45);
}

.glyphicon {
	color: rgba(255, 255, 255, 1);
}

nav p {
	color: rgba(255, 255, 255, 1);
	font-size: 18px;
	font-weight: bold;
	margin-top: 18px;
	margin-right: 40px;
}

/* Custom Buttons */

.btn-main {
	color: rgba(255, 255, 255, 1);
  font-size: 2.5em;
  padding: 8px 45px;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
	background-color: rgba(255, 65, 0, 1);
	*background-color: rgba(255, 65, 0, 1);
	background-image: -moz-linear-gradient(top, #rgba(255, 128, 0, 1), rgba(255, 65, 0, 1));
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#rgba(255, 128, 0, 1)), to(rgba(255, 65, 0, 1)));
	background-image: -webkit-linear-gradient(top, #rgb1(255, 128, 0), rgb1(255, 65, 0, 1));
	background-image: -o-linear-gradient(top, #rgb1(255, 128, 0, 1), rgb1(255, 65, 0, 1));
	background-image: linear-gradient(to bottom, #rgb1(255, 128, 0, 1), rgb1(255, 65, 0, 1));
	background-repeat: repeat-x;
	border-color: rgba(255, 65, 0, 1);
	border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1);
}

.btn-custom:hover,
.btn-custom:focus,
.btn-custom:active,
.btn-custom.active,
.btn-custom.disabled,
.btn-custom[disabled] {
	color: rgba(255, 255, 255, 1);
	background-color: rgba(255, 65, 0, 1);
}

.btn-custom {
  align-self: flex-start;
	color: rgba(255, 255, 255, 1);
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
	background-color: rgba(255, 65, 0, 1);
	*background-color: rgba(255, 65, 0, 1);
	background-image: -moz-linear-gradient(top, #rgba(255, 128, 0, 1), rgba(255, 65, 0, 1));
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#rgba(255, 128, 0, 1)), to(rgba(255, 65, 0, 1)));
	background-image: -webkit-linear-gradient(top, #rgba(255, 128, 0, 1), rgba(255, 65, 0, 1));
	background-image: -o-linear-gradient(top, #rgba(255, 128, 0, 1), rgba(255, 65, 0, 1));
	background-image: linear-gradient(to bottom, #rgba(255, 128, 0, 1), rgba(255, 65, 0, 1));
	background-repeat: repeat-x;
	border-color: rgb1(255, 65, 0, 1);
	border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1);
}

.btn-custom:hover,
.btn-custom:focus,
.btn-custom:active,
.btn-custom.active,
.btn-custom.disabled,
.btn-custom[disabled] {
	color: rgba(255, 255, 255, 1);
	background-color: rgba(255, 65, 0, 1);
}

.form-submit-btn {
  margin: 20px;
  align-self: flex-end;
}

.upper-right-btn {
  order: -1;
}

/* Splash Page */

h2 {
  font-size: 3.75em;
  letter-spacing: -2px;
  margin-bottom: 30px;
}

.splash-logo {
  width: 300px;
  margin-top: 40px;
}

.features {
  margin-top: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: rgba(0, 55, 104, .4);
  border-top: 2px solid rgba(0, 0, 0, 1);
}

.features-article {
  display: flex;
  margin: 40px;
  flex-direction: column;
  width: 180px;
  height: 100%;
}

.features article h1{
  font-size: 1.6em;
}

.features article img{
  align-self: center;
  margin-bottom: 20px;
}

.features article p{
  text-align: center;
}

/* For Sticky Footer */

#wrap {
  min-height: 100%;
  height: auto;
  margin: 0 auto -60px;
  padding: 0 0 60px;
}

footer {
  height: 60px;
  background-color: rgba(0, 0, 0, 1);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}

footer ul{
  list-style: none;
  color: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}

footer li {
  margin: 10px;
}

.footer-hover:hover {
  color: rgba(255, 65, 0, 1);
}


/* List Members Styles */

.inner-container-row figure {
  margin: 10px;
}

/* Service Record and Update Service Record */

.member {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100vh;
  width: 100%;
}

.member-form {
  display: flex;
  flex-direction: row;
}

.form-group {
  display: flex;
  flex-direction: column;
  margin: 20px;
}

.checkbox-group {
  display: flex;
  flex-direction: column;
  margin: 40px;
}

/* List planits Styles */

.planits-table {
  color: rgba(0, 0, 0, 1);
  background-color: rgba(228, 228, 228, 1);
}

/* forms */

.planit-form, .proposal-form {
  display: flex;
  flex-direction: column;
}

.planit-form input{
  align-self: flex-start;
}

.planit-dropdown {
  position: relative;
  margin: 20px 0;
}

.description-margin {
  margin-top: 20px;
}

.edit-planit-btn .edit-proposal-btn {
  align-self: flex-start;
}

/* Error Messaging */

.error-message {
  color: rgba(255, 0, 0, 1);
  font-size: 24px;
}

.error-text {
  color: rgba(255, 0, 0, 1);
}

.error-highlight {
  background-color: rgba(255, 255, 0, 1);
}

